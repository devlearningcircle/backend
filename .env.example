# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# MongoDB connection string
# Format: mongodb://[username:password@]host[:port]/database
# For local: mongodb://localhost:27017/school_portal
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/database
MONGO_URI=mongodb://localhost:27017/school_portal

# =============================================================================
# JWT AUTHENTICATION
# =============================================================================
# CRITICAL: Secret key for signing JWT tokens
# MUST be a strong, random string with minimum 32 characters
# Generate with: openssl rand -base64 32
# NEVER use weak secrets like "secret", "password", or predictable values
JWT_SECRET=CHANGE_THIS_TO_STRONG_RANDOM_VALUE_MIN_32_CHARS

# JWT token expiration time (examples: 1h, 7d, 30d)
JWT_EXPIRES_IN=1d

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Port for the backend server
PORT=3001

# Application environment (development, production, test)
NODE_ENV=development

# Application base URL for generating full URLs for uploaded files
# Format: https://your-domain.com/app-path (without trailing slash)
# Example for production: https://dev.learningcircle.education/schoolcrmbackend
# Example for development: http://localhost:3001
APP_BASE_URL=https://dev.learningcircle.education/schoolcrmbackend

# Frontend URL for CORS configuration
FRONTEND_URL=http://localhost:3000

# Bcrypt salt rounds for password hashing (10-12 recommended)
BCRYPT_ROUNDS=10

# =============================================================================
# PAYMENT GATEWAY - RAZORPAY
# =============================================================================
# Razorpay API credentials (get from https://dashboard.razorpay.com/)
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# =============================================================================
# EMAIL CONFIGURATION - SMTP
# =============================================================================
# SMTP server configuration for sending emails
# Examples: Gmail, SendGrid, AWS SES, Mailgun, etc.

# SMTP host (e.g., smtp.gmail.com, smtp.sendgrid.net)
SMTP_HOST=smtp.gmail.com

# SMTP port (587 for TLS, 465 for SSL, 25 for unencrypted)
SMTP_PORT=587

# SMTP authentication credentials
# For Gmail: Enable "App Passwords" in Google Account settings
SMTP_USER=your_email@example.com
SMTP_PASS=your_smtp_password_or_app_password

# Email "From" name (displayed in recipient's inbox)
SMTP_FROM="School Portal Notifications"

# =============================================================================
# SMS CONFIGURATION - TWILIO
# =============================================================================
# Twilio credentials for sending SMS/OTP
# Get from: https://console.twilio.com/

# Twilio Account SID
TWILIO_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Twilio Auth Token
TWILIO_TOKEN=your_twilio_auth_token

# Twilio phone number (must be verified in Twilio dashboard)
# Format: +[country_code][phone_number]
TWILIO_FROM=+1234567890

# =============================================================================
# OPTIONAL CONFIGURATIONS
# =============================================================================

# File upload size limit (in bytes, default: 5MB)
# MAX_FILE_SIZE=5242880

# Session timeout (in milliseconds)
# SESSION_TIMEOUT=3600000

# Enable debug logging (true/false)
# DEBUG=false
